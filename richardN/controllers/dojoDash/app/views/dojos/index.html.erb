<!DOCTYPE html>
<html>
<head>
  <title>index</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <br>
    <% if flash[:success] %>
        <p><%= flash[:success] %></p>
    <% end %>
    <% if @dojos %>
        <h3>Listing <%= @dojos.count %> Dojos</h3>
    <% end %>
    <br>
    <table>
        <thead>
            <th>Coding Dojo Branch</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
        </thead>
        <tbody>
            <% @dojo.each do |dojo| %>
            <tr>
                <td><%= dojo.branch %></td>
                <td><%= dojo.street %></td>
                <td><%= dojo.city %></td>
                <td><%= dojo.state %></td>
                <td><a href="/dojos/<%= dojo.id %>">Show</a> | <a href="/dojos/<%= dojo.id %>/edit">Edit</a> | <a href="/dojos/<%= dojo.id %>/destroy" data-method='delete'>Destroy</a></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <a href="/dojos/new">New Dojo</a>
</body>
</html>
